<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="application.ViewEventsController">
    <VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="10">
        <Label text="Available Events" />
        <TableView fx:id="eventsTable" prefHeight="300" prefWidth="500">
            <columns>
                <TableColumn fx:id="eventNameColumn" text="Event Name" />
                <TableColumn fx:id="eventDateColumn" text="Event Date" />
            </columns>
        </TableView>
        <Button fx:id="selectEventButton" onAction="#handleSelectEvent" text="Select Event" />
      <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" text="back" />
    </VBox>
</AnchorPane>
