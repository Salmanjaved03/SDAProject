<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="application.DeleteUpdateEventsController">
    <children>
        <ListView fx:id="mainEventsListView" layoutX="20.0" layoutY="20.0" prefHeight="300.0" prefWidth="360.0"/>
        <Button fx:id="deleteEventButton" layoutX="400.0" layoutY="60.0" mnemonicParsing="false" text="Delete Event"
                onAction="#handleDeleteEvent"/>
        <Button fx:id="updateEventButton" layoutX="400.0" layoutY="120.0" mnemonicParsing="false" text="Update Event"
                onAction="#handleUpdateEvent"/>
    </children>
</AnchorPane>
